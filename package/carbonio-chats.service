[Unit]
Description=Carbonio Chats daemon
Documentation=https://docs.zextras.com/zextras-suite-documentation/latest/
Wants=network.target
Requires=network-online.target
After=network-online.target

[Service]
Type=simple
ExecStart=/opt/zextras/common/bin/java  -Djava.net.preferIPv4Stack=true -jar /usr/bin/carbonio/chats/carbonio-chats.jar
User=carbonio-chats
Group=carbonio-chats
Restart=on-failure
RestartSec=15
TimeoutSec=60
TimeoutStopSec=120

[Install]
WantedBy=multi-user.target
