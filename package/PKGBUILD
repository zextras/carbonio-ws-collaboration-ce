   "service-discover"
   "jq"
)
backup=(
   "etc/carbonio/ws-collaboration/config.properties"
   "etc/carbonio/ws-collaboration/logback.xml"
   "etc/zextras/service-discover/carbonio-ws-collaboration.hcl"
)
