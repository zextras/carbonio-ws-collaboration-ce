targets=(
   "centos"
   "ubuntu"
)
pkgname="carbonio-chats-ce"
pkgver="0.1.1"
pkgrel="1"
pkgdesc="Chats for carbonio CE"
pkgdesclong=(
   "Chats for carbonio CE"
)
maintainer="Zextras <packages@zextras.com>"
arch="amd64"
license=("AGPL3.0")
section="admin"
priority="optional"
url="https://www.zextras.com/"
depends=(
   "pending-setups"
   "carbonio-openjdk"
   "service-discover"
   "jq"
)
backup=(
   "etc/carbonio/chats/config.properties"
   "etc/zextras/service-discover/carbonio-chats.hcl"
)
sources=(
   "carbonio-chats"
   "carbonio-chats.service"
   "carbonio-chats.hcl"
   "carbonio-chats-sidecar.service"
   "carbonio-chats-setup.sh"
   "policies.json"
   "intentions.json"
   "service-protocol.json"
   "config.properties"
)
hashsums=(
