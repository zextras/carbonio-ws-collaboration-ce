targets=(
   "centos"
   "ubuntu"
)
pkgname="carbonio-chats-ce"
pkgver="0.1.1"
pkgrel="1"
pkgdesc="Chats for carbonio CE"
pkgdesclong=(
   "Chats for carbonio CE"
)
maintainer="Zextras <packages@zextras.com>"
arch="amd64"
license=("AGPL3.0")
section="admin"
priority="optional"
url="https://www.zextras.com/"
depends=(
   "pending-setups"
   "carbonio-openjdk"
   "service-discover"
)
sources=(
   "carbonio-chats.service"
   "carbonio-chats.sh"
   "carbonio-chats.hcl"
   "carbonio-chats-sidecar.service"
)
hashsums=(
   "skip"
   "skip"
   "skip"
   "skip"
)

package() {
  cd "${srcdir}"/../../chats
  install -Dm 644 ./carbonio-chats-ce-boot/target/carbonio-chats-ce-fatjar.jar \
    "${pkgdir}/usr/bin/carbonio/chats/carbonio-chats-ce.jar"
  install -Dm 644 "${srcdir}/carbonio-chats.service" \
    "${pkgdir}/lib/systemd/system/carbonio-chats.service"
  install -Dm 644 "${srcdir}/carbonio-chats.hcl" \
    "${pkgdir}/etc/zextras/service-discover/carbonio-chats.hcl"
  install -Dm 755 "${srcdir}/carbonio-chats.sh" \
    "${pkgdir}/usr/bin/carbonio/chats/carbonio-chats"
  install -Dm 644 "${srcdir}/carbonio-chats-sidecar.service" \
    "${pkgdir}/lib/systemd/system/carbonio-chats-sidecar.service"
  mkdir -pm 0755 "${pkgdir}/etc/carbonio/carbonio-chats"
}

postinst() {
  getent group 'carbonio-chats' >/dev/null ||
    groupadd -r 'carbonio-chats'
  getent passwd 'carbonio-chats' >/dev/null ||
    useradd -r -M -g 'carbonio-chats' -s /sbin/nologin 'carbonio-chats'

  mkdir -p '/etc/carbonio/chats/'
  chown 'carbonio-chats:carbonio-chats' '/etc/carbonio/chats/'

  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
    systemctl enable carbonio-chats.service >/dev/null 2>&1 || :
    systemctl enable carbonio-chats-sidecar.service >/dev/null 2>&1 || :
  fi

  cat > /etc/zextras/pending-setups.d/carbonio-chats-setup.sh <<EOF
#!/usr/bin/env bash
/usr/bin/carbonio/chats/carbonio-chats setup
EOF

  echo "Chats CE installed correctly."
  echo "Please run 'pending-setups' as root to complete the service setup"
}

prerm() {
  if [ -d /run/systemd/system ]; then
    systemctl --no-reload disable carbonio-chats.service >/dev/null 2>&1 || :
    systemctl --no-reload disable carbonio-chats-sidecar.service >/dev/null 2>&1 || :
    systemctl stop carbonio-chats.service >/dev/null 2>&1 || :
    systemctl stop carbonio-chats-sidecar.service >/dev/null 2>&1 || :
  fi
}

postrm() {
  rm -rf "/etc/carbonio/carbonio-chats/"
  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
  fi
}